{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "target": "es2019",
    "skipLibCheck": true,
		"rootDir": "src/",
		"baseUrl": "src/",
		"paths": {
      "@net/*": ["net/*"],
      "@codecs/*": ["net/server/codecs/*"],
			"@utils/*": ["utils/*"],
			"@internals/*": ["internals/*"],
			"@root/*": ["*"]
		}
  },
  "exclude": ["node_modules", "experiments"],
  "include": ["src/**/*", "src/**/*"]
}
